extends layout
block header
block content
  div
    include partials/nav.pug
    header.jumbotron.bg-secondary.text-white.text-center
      .container
        h2.font-weight-light.mb-0 Create a team for the 2018 freeCodeCamp JAMstack Hackathon

    main
      .container#flash-container

      .container
        h1 Go Team!
        #team-form-or-webhook
          form#create-team-form(v-on:submit='handleFormSubmit')
            .form-group
              label(for='team-name') Team Name
              input#team-name.form-control(type='text', aria-describedby='team-name-help', placeholder='' required=true)
              small#team-name-help.form-text.text-muted Your team name.
            .form-group
              label(for='team-repo') GitHub Repository
              input#team-repo.form-control(type='url', placeholder='', required=true)
            .form-group
              label(for='team-site') Site URL
              input#team-site.form-control(type='url', aria-describedby='team-site-help', placeholder='', required=true)
              small#team-name-help.form-text.text-muted The URL of your site, usually provided by Netlify.
            .form-group
              label(for='team-collab') Team Collaborators
              input#team-collab.form-control(type='text', aria-describedby='team-collab-help', placeholder='')
              small#team-collab-help.form-text.text-muted A comma separated list of Github usernames.

            .form-group.form-check
              legend
                strong Which hackathon are you participating in?
              .col
                input#isOnLine(type="radio", v-model="picked", name="isOnlineHackathon", required)
                label(for="isOnLine") The online hackathon
              .col
                input(type="radio", id="inPerson", value="In-person", v-model="picked", name="isOnlineHackathon", required)
                label(for="inPerson") The in-person hackathon in San Francisco

            .form-group.form-check
              legend
                strong Which API Sponsors do you intent to use?
              .col
                input#Clarifai.form-check-input(type='checkbox', value='', name='Clarifai')
                label.form-check-label(for='Clarifai') Clarifai -&nbsp;
                  a(href='https://clarifai.com', target='_blank', rel="noopener noreferrer") clarifai.com
              .col
                input#Fauna.form-check-input(type='checkbox', value='', name='Faunai')
                label.form-check-label(for='Fauna') Fauna -&nbsp;
                  a(href='https://fauna.com/', target='_blank', rel="noopener noreferrer") fauna.com
              .col
                input#Formspree.form-check-input(type='checkbox', value='', name='Formspree')
                label.form-check-label(for='Formspree') Formspree -&nbsp;
                  a(href='https://formspree.io/', target='_blank', rel="noopener noreferrer") formspree.io
              .col
                input#Hasura.form-check-input(type='checkbox', value='', name='Hasura')
                label.form-check-label(for='Hasura') Hasura -&nbsp;
                  a(href='https://hasura.io/', target='_blank', rel="noopener noreferrer") hasura.io
              .col
                input#Pilon.form-check-input(type='checkbox', value='', name='Pilon')
                label.form-check-label(for='Pilon') Pilon -&nbsp;
                  a(href='https://pilon.io/', target='_blank', rel="noopener noreferrer") pilon.io

            button.btn.btn-primary(type='submit') Submit
